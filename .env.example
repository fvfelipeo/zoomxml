# ZoomXML Multi-Enterprise NFS-e Service Configuration
# Copy this file to .env and adjust the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=ZoomXML
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=nfse_metadata
DB_SSLMODE=disable

# Database connection pool settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# =============================================================================
# STORAGE CONFIGURATION (MinIO/S3)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password123
MINIO_BUCKET=nfse-storage
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# IMPORTANT: Change this secret in production!
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRY=168h
PASSWORD_MIN_LENGTH=8
ENABLE_REFRESH_TOKENS=true

# Admin token for user management (CHANGE IN PRODUCTION!)
ADMIN_TOKEN=admin-secret-token

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=0.0.0.0
PORT=3000
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# CORS Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
ENABLE_AUTO_SYNC=true
DEFAULT_SYNC_INTERVAL=1h
JOB_PROCESSOR_INTERVAL=30s
MAX_RETRIES=5
RETRY_BACKOFF_FACTOR=2.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_ENABLE_FILE=false
LOG_FILE_PATH=logs/zoomxml.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
ENABLE_RATE_LIMIT=true
PUBLIC_RPM=100
AUTHENTICATED_RPM=1000
HEAVY_OPERATIONS_RPM=10
DOWNLOAD_RPM=50